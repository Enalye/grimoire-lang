{
    "name": "grimoire-lang",
    "displayName": "Grimoire Language",
    "description": "Language support for the Grimoire language",
    "version": "0.8.1",
    "publisher": "Enalye",
	"icon": "logo.png",
    "repository": {
		"type": "git",
		"url": "https://github.com/enalye/grimoire-lang"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "grimoire",
                "aliases": [
                    "Grimoire",
                    "grimoire"
                ],
                "extensions": [
                    ".gr",
                    ".grm",
                    ".grimoire"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/clair.png",
                    "dark": "./icons/sombre.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "grimoire",
                "scopeName": "source.grimoire",
                "path": "./syntaxes/grimoire.tmLanguage.json"
            }
        ]
    }
}