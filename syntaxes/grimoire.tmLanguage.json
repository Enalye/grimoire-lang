{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Grimoire",
	"patterns": [
        {
            "include": "#supports"
        },
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
        },
        {
			"include": "#constants"
        },
        {
            "include": "#comments"
        }
	],
	"repository": {
		"keywords": {
			"patterns": [
                {
                    "name": "keyword.control.grimoire",
                    "match": "\\b(main|if|unless|else|switch|select|case|while|until|do|loop|for|return|kill|killall|yield|break|continue|as|try|catch|raise|defer)\\b"
                },
                {
                    "name": "keyword.control.import.grimoire",
                    "match": "\\b(use)\\b"
                },
                {
                    "name": "keyword.operator.word.grimoire",
                    "match": "\\b(and|or|not|xor|is)\\b"
                },
                {
                    "name": "keyword.other.new.grimoire",
                    "match": "\\b(new)\\b"
                },
                {
                    "name": "keyword.operator.assignement.grimoire",
                    "match": "\\b(\\+=|-=|\\*=|\/=|%=|=|~=|<-)\\b"
                },
                {
                    "name": "keyword.operator.logical.grimoire",
                    "match": "\\b(==|!=|\\>=|\\<=|\\>|\\<)\\b"
                },
                {
                    "name": "keyword.operator.arithmetic.grimoire",
                    "match": "\\b(\\+\\+|\\+|--|-|\\*|\/|%)\\b"
                },
                {
                    "match": "\\b(func)\\b\\s*\\b(operator)\\b\\s*(\\+|-|\\*|\/|%|and|or|not|xor|==|!=|\\>=|\\<=|\\>|\\<)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "keyword.control.grimoire"
                        },
                        "2": {                          
                            "name": "keyword.control.grimoire"
                        },
                        "3": {                         
                            "name": "keyword.control.grimoire"
                        }
                    }
                },
                {
                    "match": "\\b(func)\\b\\s*\\b(as)\\b\\s*\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "keyword.control.grimoire"
                        },
                        "2": {                          
                            "name": "keyword.control.grimoire"
                        }
                    }
                },
                {
                    "match": "\\b(task|func|event)\\b\\s*([A-Za-z_]([A-Za-z0-9_]*))\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "keyword.control.grimoire"
                        },
                        "2": {
                            "name": "entity.name.function.grimoire"
                        }
                    }
                },
                {
                    "match": "(\\.)\\s*([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "punctuation.accessor.grimoire"
                        },
                        "2": {
                            "name": "variable.other.grimoire"
                        }
                    }
                },
                {
                    "match": "\\b(class)\\s+([A-Za-z_]([A-Za-z0-9_]*))\\s*(:)?\\s*([A-Za-z_]([A-Za-z0-9_]*))?",
                    "captures": {
                        "1": {
                            "name": "storage.type.class.grimoire"
                        },
                        "2": {
                            "name": "entity.name.class.grimoire"
                        },
                        "4": {
                            "name": "punctuation.separator.grimoire"
                        },
                        "5": {
                            "name": "entity.other.inherited-class.grimoire"
                        }
                    }
                },
                {
                    "match": "(:)\\s*([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "punctuation.accessor.grimoire"
                        },
                        "2": {
                            "name": "entity.name.function.grimoire"
                        }
                    }
                },
                {
                    "match": "\\b(enum)\\s+([A-Za-z_]([A-Za-z0-9_]*))",
                    "captures": {
                        "1": {
                            "name": "storage.type.enum.grimoire"
                        },
                        "2": {
                            "name": "entity.name.enum.grimoire"
                        }
                    }
                },
                {
                    "match": "\\b(type)\\s+([A-Za-z_]([A-Za-z0-9_]*))",
                    "captures": {
                        "1": {
                            "name": "storage.type.typedef.grimoire"
                        },
                        "2": {
                            "name": "entity.name.typedef.grimoire"
                        }
                    }
                },
                {
                    "match": "(@)\\s*([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.operator.grimoire"
                        },
                        "2": {
                            "name": "entity.name.class.grimoire"
                        }
                    }
                },
                {
                    "name": "storage.type.grimoire",
                    "match": "\\b(void|int|float|bool|string|array|task|func|chan|let)\\b"
                },
                {
                    "name": "storage.type.grimoire",
                    "match": "[A-Z]([A-Za-z0-9_]*)"
                },
                {
                    "match": "([A-Za-z_]([A-Za-z0-9_]*))\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.grimoire"
                        }
                    }
                },
                {
                    "name": "storage.modifier.grimoire",
                    "match": "\\b(pub)\\b"
                },
                {
                    "name": "variable.language.grimoire",
                    "match": "\\b(self)\\b"
                },
                {
                    "name": "constant.language.grimoire",
                    "match": "\\b(true|false|null)\\b"
                },
                {
                    "name": "entity.name.grimoire",
                    "match": "[A-Za-z]([A-Za-z0-9_]*)"
                },
                {
                    "name": "punctuation.terminator.grimoire",
                    "match": ";"
                }
            ]
        },
		"strings": {
			"name": "string.quoted.double.grimoire",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.grimoire",
					"match": "\\\\."
				}
			]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.float.grimoire",				
                    "match": "[0-9]+(\\.[0-9]+)f?"
                },
                {
                    "name": "constant.numeric.float.grimoire",				
                    "match": "[0-9]+f"
                },
                {
                    "name": "constant.numeric.integer.grimoire",				
                    "match": "[0-9]+"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.grimoire",
                    "match": "\/\/.*"
                },
                {
                    "name": "comment.block.documentation.grimoire",
                    "begin": "\/\\*\\*",
                    "end": "\\*\/",
                    "patterns": []
                },
                {
                    "name": "comment.block.grimoire",
                    "begin": "\/\\*",
                    "end": "\\*\/",
                    "patterns": []
                }
            ]
        },
        "supports": {
            "patterns": [
                {
                    "name": "support.function.grimoire",
                    "match": "\\b(to_string|print)\\b"
                }
            ]
        }
    },
	"scopeName": "source.grimoire"
}